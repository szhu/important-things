[user]
	name = Sean Zhu
[color]  
	diff = auto  
	status = auto  
	branch = auto
[push]
	default = current
[alias]
	b = branch
	c = commit
	co = checkout
	current-branch = rev-parse --verify --abbrev-ref HEAD # http://stackoverflow.com/questions/6245570
	current-commit = rev-parse --verify HEAD
	current-remote = rev-parse --verify --symbolic-full-name --abbrev-ref @{u} # http://stackoverflow.com/questions/6245570
	detach = !bash -c 'git checkout "$(git current-commit)"'
	exec = "!exec " # http://stackoverflow.com/questions/957928/is-there-a-way-to-get-the-git-root-directory-in-one-command
	last = log -1 HEAD
	ld = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --graph
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ls = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	m = merge
	nb = checkout -b
	r = rebase
	r2 = rebase -i HEAD~2
	rb = remote-branches
	ri = rebase -i
	root = rev-parse --show-toplevel
	uu = set-upstream-to-origin-current
[mergetool]
	keepBackup = false
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[difftool "twdiff"]
	cmd = twdiff â€“wait \"$LOCAL\" \"$REMOTE\"
	cmd = twdiff --wait \"$LOCAL\" \"$REMOTE\"
