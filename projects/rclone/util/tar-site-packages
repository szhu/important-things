#!/bin/bash

set -e

verbose() {
    echo $ "$@"
    "$@"
}


if test -z "$1"

# Initial call
then
    while
        RESULTS="$(gfind . -type d -name 'site-packages' -print0 -quit)"
        echo -n "$RESULTS" | xargs -0 -n1 "$0"
        test -n "$RESULTS"
    do
        :
    done

# Recursive call
else
    SITE_PACKAGES_DIR="$1"
    PROJ_ROOT="$(dirname "$SITE_PACKAGES_DIR")"

    echo
    verbose cd "$PROJ_ROOT"

    verbose env GZIP=-9 tar -czf site-packages.tar.gz -- site-packages
    verbose trash -a site-packages
fi
